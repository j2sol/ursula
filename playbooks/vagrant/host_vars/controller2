---
network_interfaces: |
  auto lo
  iface lo inet loopback

  auto eth0
  iface eth0 inet dhcp

  # Internal "nodes" network
  auto eth1
  iface eth1 inet static
    address 172.16.0.102
    netmask 255.255.255.0
    mtu 9216
    up sysctl net.ipv4.conf.all.forwarding=1
    ucarp-vid 1
    ucarp-vip 172.16.0.2
    ucarp-master no
    ucarp-password fgz4tu0znYHaIq1d

  iface eth1:ucarp inet static
    address 172.16.0.2
    netmask 255.255.255.0

  # External interface
  auto eth2
  iface eth2 inet static
    address 192.168.254.102
    netmask 255.255.255.0
    mtu 1500
    up sysctl net.ipv4.conf.all.forwarding=1
    up iptables -t nat -A POSTROUTING -o $IFACE -s 192.168.255.0/24 ! -d 192.168.255.0/24 -j MASQUERADE
    dns-search blueboxgrid.com
    dns-nameservers 8.8.8.8
    ucarp-vid 35
    ucarp-vip 192.168.255.2
    ucarp-master no
    ucarp-password duxOVEqqfrYEM6iP

  iface eth2:ucarp inet static
    address 192.168.254.2
    netmask 255.255.255.0

  # routed external interface
  auto br-ex
  iface br-ex inet static
    address 192.168.255.1
    netmask 255.255.255.0
    up sysctl net.ipv4.conf.all.forwarding=1
